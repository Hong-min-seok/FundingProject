            <Label alignment="CENTER" prefHeight="10.0" prefWidth="451.0" styleClass="title" stylesheets="@Theme.css" text="제품 상세" textAlignment="CENTER" />
            <ImageView fx:id="productImage" fitHeight="325.0" fitWidth="451.0" pickOnBounds="true" preserveRatio="true" />
            <HBox alignment="CENTER" prefHeight="36.0" prefWidth="451.0">
               <children>
                  <Label fx:id="productName" alignment="CENTER" prefHeight="36.0" prefWidth="242.0" styleClass="productname" stylesheets="@Theme.css" text="product name" textAlignment="CENTER" />
