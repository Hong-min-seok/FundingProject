            <Label fx:id="productPrice" alignment="CENTER" prefHeight="40.0" prefWidth="450.0" styleClass="productprice" stylesheets="@Theme.css" text="product price" textAlignment="CENTER" />
            <Label fx:id="productDescription" alignment="CENTER" prefHeight="40.0" prefWidth="450.0" styleClass="productdescription" stylesheets="@Theme.css" text="product descirption" />
