<AnchorPane fx:id="prod_detail" prefHeight="660.0" prefWidth="450.0" style="-fx-background-color:white" stylesheets="@Theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kosa.funding.view.StoreProductOverviewController">
   <children>
      <Button fx:id="back_store" layoutY="21.0" mnemonicParsing="false" onAction="#handleBtnBackAction" text="돌아가기" />
      <VBox alignment="TOP_CENTER" layoutY="54.0" prefHeight="646.0" prefWidth="451.0" style="-fx-background-color: white;">
